{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    },
    "website#build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".vercel/**"],
      "env": ["DATABASE_URI", "PAYLOAD_SECRET", "PUBLIC_PAYLOAD_SERVER_URL", "ZOHO_EMAIL", "ZOHO_PASSWORD", "ADMIN_EMAIL"]
    },
    "payload_app#build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URI", "PAYLOAD_SECRET", "PORT"]
    },
    "payload_app#start": {
      "dependsOn": ["^payload_app#build"],
      "cache": false,
      "persistent": true
    },
    "website#start": {
      "dependsOn": ["^website#build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
