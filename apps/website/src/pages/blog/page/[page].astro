---
import Base from "@/layouts/Base.astro";
import dateFormat from "@/lib/utils/dateFormat";
import { payload as _payload } from "@/lib/payload";
import { generatPayloadImageUrl } from "@/lib/utils";
import Pagination from "@/layouts/components/Pagination.astro";

export const prerender = false;

// Generate static paths for all blog pages
export async function getStaticPaths() {
  try {
    const payload = await _payload();
    const BLOGS_PER_PAGE = 6;

    // Get total pages by fetching the first page to get totalPages
    const result = await payload.find({
      collection: "blogs",
      where: {
        published: {
          equals: true,
        },
      },
      sort: "-createdAt",
      limit: BLOGS_PER_PAGE,
      page: 1,
    });

    const maxPages = result.totalPages;
    const paths = [];

    // Generate paths for pages 2 and beyond (page 1 is handled by index.astro)
    for (let page = 2; page <= maxPages; page++) {
      paths.push({
        params: { page: page.toString() },
      });
    }

    return paths;
  } catch (error) {
    console.error("Error generating static paths for blog pages:", error);
    return [];
  }
}

const payload = await _payload();
const BLOGS_PER_PAGE = 6;

const { page } = Astro.params;
const currentPage = parseInt(page || "1");

// Validate page number
if (isNaN(currentPage) || currentPage < 1) {
  return Astro.redirect("/blog");
}

// Fetch blogs with pagination
const result = await payload.find({
  collection: "blogs",
  depth: 2,
  where: {
    published: {
      equals: true,
    },
  },
  sort: "-createdAt",
  limit: BLOGS_PER_PAGE,
  page: currentPage,
  overrideAccess: true, // Bypass access controls for server-side
});

// Populate tags for all blogs
const { populateBlogTags } = await import("@/lib/blog");
const blogsWithTags = await Promise.all(
  result.docs.map((blog) => populateBlogTags(payload, blog))
);

const {
  totalDocs,
  totalPages,
  hasNextPage,
  hasPrevPage,
} = result;

const blogs = blogsWithTags;
---

<Base title={`Blog - Page ${currentPage}`}>
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="mx-auto lg:col-10">
          <h1 class="h2 mb-8 text-center">Blog - Page {currentPage}</h1>
          <div class="row">
            {
              blogs.map((blog) => (
                <div class="mb-14 md:col-6 lg:col-4">
                  <div class="lg:flex-col items-center">
                    <img
                      class="lg:mr-7 lg:w-full mb-6"
                      src={
                        typeof blog.featuredImage == "number"
                          ? undefined
                          : generatPayloadImageUrl(blog?.featuredImage?.url!)
                      }
                      alt={blog.title}
                      width={445}
                      height={230}
                    />
                    <div>
                      <h3 class="h4 mb-4 mt-6 lg:mt-0">
                        <a
                          href={`/blog/${blog.slug}`}
                          class="block hover:text-primary"
                        >
                          {blog.title}
                        </a>
                      </h3>
                      <p class="mb-4 text-sm">
                        <time datetime={blog.createdAt}>
                          {dateFormat(blog.createdAt, "MMMM dd, yyyy")}
                        </time>
                      </p>
                      <p>{blog.excerpt}...</p>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>

          <!-- Pagination -->
          {
            totalPages > 1 && (
              <div class="mt-12">
                <Pagination
                  section="blog"
                  currentPage={currentPage}
                  totalPages={totalPages}
                />
              </div>
            )
          }
        </div>
      </div>
    </div>
  </section>
</Base>
