# Database Configuration
# Set USE_MONGODB=true to use MongoDB, or false/leave unset to use PostgreSQL
USE_MONGODB=true

# For MongoDB - use this format:
# DATABASE_URI=mongodb://127.0.0.1:27017/your-database-name
# DATABASE_URI=mongodb://username:password@127.0.0.1:27017/your-database-name
# DATABASE_URI=mongodb://mongo:27017/your-database-name (for Docker)
DATABASE_URI=mongodb://127.0.0.1:27017/your-database-name

# For PostgreSQL - use this format:
# DATABASE_URI=postgresql://user:password@localhost:5432/database_name
# DATABASE_URI=postgresql://postgres:password@postgres:5432/payload-db (for Docker)

# Payload CMS Secret - generate a secure random string
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Optional: Uploadthing for media storage
# UPLOADTHING_TOKEN=your_uploadthing_token_here

# Server Port (optional, defaults to 3000)
PORT=3000
